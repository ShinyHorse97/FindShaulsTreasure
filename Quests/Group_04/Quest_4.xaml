<?xml version="1.0" encoding="utf-8" ?>
<quests:BaseQuestView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:quests="clr-namespace:FindShaulsTreasure.Quests"
             x:Class="FindShaulsTreasure.Quests.Group_03.Quest_03">
    <VerticalStackLayout Padding="16" Spacing="12" HorizontalOptions="Center">
        <Label Text="Welcome to the flashing word game"
               FontSize="Header"
               VerticalOptions="Center"
               HorizontalOptions="Center"/>
        <Label Text="Spin the slot machine and find the hidden word"
               FontSize="Subtitle"
               VerticalOptions="Center"
               HorizontalOptions="Center"/>

        <!-- Single horizontal line of characters -->
        <HorizontalStackLayout HorizontalOptions="Center" Spacing="8" Margin="0,8">
            <Border Stroke="Black" StrokeThickness="2" Padding="20" >
                <Label Text=" " FontSize="Large" HorizontalOptions="Center" VerticalOptions="Center"/>
            </Border>
            <Border Stroke="Black" StrokeThickness="2" Padding="20">
                <Label Text=" " FontSize="Large" HorizontalOptions="Center" VerticalOptions="Center"/>
            </Border>
            <Border Stroke="Black" StrokeThickness="2" Padding="20">
                <Label Text=" " FontSize="Large" HorizontalOptions="Center" VerticalOptions="Center"/>
            </Border>
            <Border Stroke="Black" StrokeThickness="2" Padding="20">
                <Label Text=" " FontSize="Large" HorizontalOptions="Center" VerticalOptions="Center"/>
            </Border>
            <Border Stroke="Black" StrokeThickness="2" Padding="20">
                <Label Text=" " FontSize="Large" HorizontalOptions="Center" VerticalOptions="Center"/>
            </Border>
            <Border Stroke="Black" StrokeThickness="2" Padding="20">
                <Label Text=" " FontSize="Large" HorizontalOptions="Center" VerticalOptions="Center"/>
            </Border>
            <Border Stroke="Black" StrokeThickness="2" Padding="20">
                <Label Text=" " FontSize="Large" HorizontalOptions="Center" VerticalOptions="Center"/>
            </Border>
            <Border Stroke="Black" StrokeThickness="2" Padding="20">
                <Label Text=" " FontSize="Large" HorizontalOptions="Center" VerticalOptions="Center"/>
            </Border>
            <Border Stroke="Black" StrokeThickness="2" Padding="20">
                <Label Text=" " FontSize="Large" HorizontalOptions="Center" VerticalOptions="Center"/>
            </Border>
        </HorizontalStackLayout>
        <Grid VerticalOptions="End" HorizontalOptions="Center" RowSpacing="8" Margin="0,0,0,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Entry x:Name="GuessEntry"
               Placeholder="Enter your guess" Grid.Row="0"/>
            <Button Text="Submit" Grid.Row="1"/>
        </Grid>
    </VerticalStackLayout>
</quests:BaseQuestView>
