<?xml version="1.0" encoding="utf-8" ?>
<quests:BaseQuestView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                     xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                     xmlns:quests="clr-namespace:FindShaulsTreasure.Quests"
                     x:Class="FindShaulsTreasure.Quests.Group_03.Quest_03">
    <VerticalStackLayout>
        <Label Text="Welcome to the game flashing word game"
               FontSize="Header"
               VerticalOptions="Center"
               HorizontalOptions="Center"/>
        <Label Text="Spin the Roulette and find the hidden word"
               FontSize="Subtitle"
               VerticalOptions="Center"
               HorizontalOptions="Center"/>
        <Grid RowDefinitions="*,*,*,*,*,*,*,*" ColumnDefinitions="*">
        </Grid>
        <Entry x:Name="GuessEntry"
               Placeholder="Enter your guess"
               HorizontalOptions="Center"/>
        <Button Text="Submit"
                Clicked="OnSubmitClicked"
                HorizontalOptions="Center"/>
    </VerticalStackLayout>
</quests:BaseQuestView>
