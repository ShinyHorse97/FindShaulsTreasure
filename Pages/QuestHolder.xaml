<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:modules="clr-namespace:FindShaulsTreasure.Quests"
             x:Class="FindShaulsTreasure.Pages.QuestHolder"
             Title="QuestHolder">
    <Grid RowDefinitions="auto, *, auto" RowSpacing="7.5" Padding="7.5">

        <Grid ColumnDefinitions="*, *" Grid.Row="0" ColumnSpacing="7.5">
            <Label x:Name="lQuestName" Text="Quest X" FontSize="Small"  HorizontalOptions="Center" Grid.Column="0"/>
            <Label Text="Points X" FontSize="Small" HorizontalOptions="Center" Grid.Column="1"/>
        </Grid>

        <ContentView x:Name="cvCurrentQuest" Grid.Row="1"/>

        <Grid ColumnDefinitions="2.5*, *" Grid.Row="2" ColumnSpacing="7.5">
            <Entry Placeholder="Password" HorizontalOptions="Fill" Grid.Column="0"/>
            <Button Text="Submit" Grid.Column="1"/>
        </Grid>

    </Grid>
</ContentPage>